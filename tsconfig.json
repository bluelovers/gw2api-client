{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",

    "moduleResolution": "node",
    "allowJs": true,

    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "declaration": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,

    "strict": false,

    //"forceConsistentCasingInFileNames": true,

    "locale": "zh-TW",
    "pretty": true,

    "baseUrl": "./src",
    "sourceRoot": "./src",
    "rootDir": "./src",
    "outDir": "./build",

    "traceResolution": true,
    "newLine": "lf"
  },

  "exclude": [
    "node_modules",
    "build",
    "tests"
  ]
}
